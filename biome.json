{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignore": [
      "node_modules",
      "*.json",
      "biome.json",
      "*sdk*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noChildrenProp": "off"
      },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noExtraNonNullAssertion": "off",
        "noImplicitAnyLet": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5",
      "jsxQuoteStyle": "double",
      "bracketSpacing": true
    }
  }
}